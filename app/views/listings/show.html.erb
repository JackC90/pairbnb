<div class=show-listing>
	<div>
		<h2><%= @listing.title %></h2>
	</div>
	<button id="image-btn" data-toggle=modal data-target=".bs-example-modal-lg" style='background: url("<%= @listing.images[0].normal.url if @listing.images[0] != nil %>")'>	
	</button>

	<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  		<div class="modal-dialog modal-lg">
    		<div class="modal-content">
				<%= render partial:"listings/carousel" %>
			</div>
		</div>
	</div>

	<div>
		<div id="available-dates" style="display:none">
			<p id="start"><%= @start = @listing.date_begin %></p>
			<p id="end"><%= @end = @listing.date_end %></p>
		</div>
		<p>
			Available <%="#{format_date(@start)} to #{format_date(@end)}" if !@start.nil? && !@end.nil? %>
		</p>
		<div id="all-bookings" >
			<%= @listing.all_bookings %>
		</div>
		<%= render partial:"reservations/new" %>
	</div>

	<div>
		<table>
			<tr>
				<td>Price</td>
				<td><%= to_RM(@listing.price) %> Per Night</td> 
			</tr>
			<tr>
				<td>Location</td>
				<td><%= @listing.location %></td>
			</tr>
			<tr>
				<td>Address</td>
				<td><%= @listing.address %></td>
			</tr>
			<tr>
				<td>Description</td>
				<td><%= @listing.description %></td>
			</tr>
			<tr>
				<td>Maximum number of Occupants</td>
				<td><%= @listing.max_occupants %></td>
			</tr>
			<tr>
				<td>Number of bedrooms</td>
				<td><%= @listing.no_of_bedrooms %></td>
			</tr>
			<tr>
				<td>Number of bathrooms</td>
				<td><%= @listing.location %></td>
			</tr>
			<tr>
				<td>Hosted by </td>
				<td><%= @listing.user.email %></td>
			</tr>
		</table>
	</div>

	<h2> 
		Amenities
	</h2>
	<div>
		<table id="amen-table">
			<tr>
				<td>Pool</td>
				<td><%= @listing.amenity.pool %></td> 
			</tr>
			<tr>
				<td>Wifi</td>
				<td><%= @listing.amenity.wifi %></td>
			</tr>
			<tr>
				<td>Gym</td>
				<td><%= @listing.amenity.gym %></td>
			</tr>
			<tr>
				<td>Kitchen</td>
				<td><%= @listing.amenity.kitchen %></td>
			</tr>
			<tr>
				<td>Golf Course</td>
				<td><%= @listing.amenity.golf_course %></td>
			</tr>
			<tr>
				<td>Tennis Court</td>
				<td><%= @listing.amenity.tennis_court %></td>
			</tr>
		</table>
	</div>
</div>



<%= link_to "Edit", edit_listing_path(@listing), show: "#{hide_link(@listing)}" %>
<%= link_to "Back", listings_path %> 