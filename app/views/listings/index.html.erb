<div class="hero-header">
  <div class="main-text">Listings</div>
</div>
<div class="jumbotron">
  <table class="listings">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Location</th>
      <th>Price</th>
      <th colspan=3>Action</th>
    </tr>

    <% @listings.each do |listing| %>
    <tr>
      <td>
        <div class="img-thumb" style='background: url("<%= listing.images[0].thumb.url if listing.images[0] != nil %>")'>
        </div>
      </td>
      <td><%= listing.title %></td>
      <td><%= listing.location %></td>
      <td><%= to_RM(listing.price) %></td>
      <td><%= link_to "Show", listing_path(listing)%></td>
      <td><%= link_to "Edit", edit_listing_path(listing), style:"#{hide_link(listing)}" %></td>
      <td><%= link_to "Delete", listing_path(listing), method: :delete, data: {confirm: "Are you sure?"}, style:"#{hide_link(listing)}"  %></td>
    </tr>
    <% end %>
    <%= will_paginate @listings, renderer: BootstrapPagination::Rails %>
    <%= page_entries_info @listings %>
  </table>
</div>