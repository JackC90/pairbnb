<div class="form_profile">
  <%= f.label :avatar %>:
  <%= f.file_field :avatar %><br />
  <%= f.label :name %>:
  <%= f.text_field :name %><br />
  <%= f.label :location %>:
  <%= f.text_field :location %><br />
  <%= f.label :country %>:
  <%= f.text_field :country %><br />
  <%= f.label :description %>:
  <%= f.text_field :description %><br />
  <%= f.label :gender %>:
  <%= f.select :gender, ["Male", "Female", "Other"] %><br />
  <%= f.label :birthdate %>:
  <input class="datepicker" type="text" data-provide='datepicker' name="profile[birthdate]" data-date-format="yyyy-mm-dd"><br />
  <%= f.label :phone %>:
  <%= f.text_field :phone %><br />
  <%= f.label :email %>:
  <%= f.text_field :email %><br />
  <%= f.label :language %>:
  <%= f.text_field :language %><br />
  <%= f.label :currency %>:
  <%= f.text_field :currency %><br />
  <%= f.label :school %>:
  <%= f.text_field :school %><br />
  <%= f.label :work %>:
  <%= f.text_field :work %><br />
  <%= f.label :address %>:
  <%= f.text_field :address %><br />
</div>
